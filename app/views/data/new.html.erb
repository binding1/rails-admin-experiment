<h1>New Data</h1>

<%= form_with model: @data do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% @data.errors.full_messages_for(:name).each do |message|
        %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :url %><br>
    <%= form.text_area :url%>
    <% @data.errors.full_messages_for(:url).each do |message|
        %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :number_of_clicks %><br>
    <%= form.text_area :number_of_clicks%>
    <% @data.errors.full_messages_for(:number_of_clicks).each do |message|
        %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
